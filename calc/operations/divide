// Para torar na função publica/exportadora é necessário colocar a primeiro letra em maiúsculo.
func Divide(a int, b int) (int, error) {
	fmt.Println("Dividindo %d / %d\n", a, b)
	if b == 0 {
		err := errors.New("Divisão por zero não é permitida")
		return 0, err
	}
	return a / b, nil
}
